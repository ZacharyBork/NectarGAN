/*---------- FRAMES ----------*/

QFrame#train_settings {
    border: 1px solid #ff3b3b3f;
    background-color: #ff3b3b3f;
    border-top-right-radius: 10px;
}
QFrame#train_settings QWidget {
    background-color: #ff3b3b3f;
}
QFrame#train_settings QPushButton {
    background-color: rgb(100, 200, 0);
}






QFrame#train_functions_frame {
    background-color: #ff3b3b3f;
}

QFrame#settings_btns_frame {
    background-color: rgb(50, 50, 50);
}

QFrame#settings_btns_frame QFrame {
    background-color: rgb(50, 50, 50);
}

/*---------- GROUPBOXES ----------*/

QGroupBox {
    border: 1px solid rgb(140, 140, 140);
    border-radius: 5px;
    margin-top: 6px;
    padding-top: 6px;
}

QGroupBox::title {
    subcontrol-origin: border;
    subcontrol-position: top center;
    padding-left: 5px;
    padding-right: 5px;
    top: -9px;
    color: rgb(200, 200, 200);
}

/*---------- DOCKS ----------*/

QDockWidget {
    color: rgb(200, 200, 200);
}

/*---------- BUTTONS ----------*/
QPushButton {
    background-color: rgb(40, 40, 40);
    color: rgb(200, 200, 200);
    padding: 1px 1px 1px 1px;
}
QPushButton::hover {
    background-color: rgb(70, 70, 70);
}
QPushButton::checked {
    background-color: rgb(255, 158, 31);
}

QPushButton#browse_dataset {
    background-color: rgb(150, 20, 70);
    border: none;
    color: white;
    qproperty-flat: true;
}

QPushButton#close_experiment_settings {
    background-color: rgb(50, 50, 50);
    border: 1px ridge rgb(35, 35, 35);
}
QPushButton::hover#close_experiment_settings {
    background-color: rgb(60, 60, 60);
}
QPushButton::pressed#close_experiment_settings {
    background-color: rgb(70, 70, 70);
}

QPushButton#experiment_settings_btn {
    border: 1px solid rgb(255, 158, 31);
    border-radius: 10px;
}
QPushButton::checked#experiment_settings_btn { 
    border: none; background-color: rgb(255, 158, 31); }
QPushButton#experiment_settings_label {
    color: rgb(255, 158, 31);
