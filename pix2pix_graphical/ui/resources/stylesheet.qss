/*---------- LABELS ----------*/

QLabel {
    color: rgb(200, 200, 200);
}
QLabel#x_label {
    background-color: rgb(50, 50, 50);
}
QLabel#y_label {
    background-color: rgb(50, 50, 50);
}
QLabel#y_fake_label {
    background-color: rgb(50, 50, 50);
}

QLabel#experiment_section_header {
    background-color: rgb(40, 40, 40);
    color: rgb(200, 200, 200);
}

QLabel#title_tag {
    color: rgb(120, 120, 120);
}
QLabel#creator_tag {
    color: rgb(120, 120, 120);
}

/*---------- SLIDERS ----------*/

QSlider {
    background-color: rgb(50, 50, 50);
}
QSlider::groove:horizontal {
    border: 1px solid #999999;
    height: 3px; 
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1, stop:0 #B1B1B1, stop:1 rgb(50, 50, 50));
    margin: 2px 0;
}

QSlider::handle:horizontal {
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:1, stop:0 #b4b4b4, stop:1 #8f8f8f);
    border: 1px solid #5c5c5c;
    width: 8px;
    margin: -12px 0;
    border-radius: 3px;
}

/*---------- LINE EDITS ----------*/

QLineEdit {
    color: rgb(200, 200, 200);
    padding: 1px 1px 1px 1px;
    border: 1px solid rgb(140, 140, 140);
    border-radius: 5;
}

/*---------- TEXT EDITS ----------*/

QTextEdit {
    background-color: rgb(25, 25, 25);
    color: rgb(200, 200, 200);
}

/*---------- SPINBOXES ----------*/

QSpinBox, QDoubleSpinBox {
    background-color: rgb(50, 50, 50);
    color: rgb(200, 200, 200);
    padding: 1px 1px 1px 1px;
    border: 1px solid rgb(140, 140, 140);
    border-bottom-left-radius: 5px;
    border-top-left-radius: 5px;
}

/*---------- SPINBOXES ----------*/

QComboBox {
    background-color: rgb(50, 50, 50);
    color: rgb(200, 200, 200);
    padding: 2px 2px 2px 2px;
    border: 1px solid rgb(140, 140, 140);
    border-top-left-radius: 5px;
}
QComboBox QAbstractItemView {
    color: rgb(200, 200, 200);
}

/*---------- CHECKBOXES ----------*/

QCheckBox {
    background: none;
    color: rgb(200, 200, 200);
}

/*---------- PROGRESS BARS ----------*/

QProgressBar{ 
    border: 1px solid rgb(80, 80, 80);
    color: rgb(200, 200, 200);
    text-align: center; 
}
QProgressBar#train_progress::chunk {
    background-color: rgb(137, 209, 44);
}
QProgressBar#epoch_progress::chunk {
    background-color: rgb(196, 75, 71);
}